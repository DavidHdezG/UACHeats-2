      crossorigin="anonymous"
    />
    <title>UACH-Eats</title>
    <style>
      body {
        font-family: "Roboto", sans-serif;
        font-size: larger;
      }

      .customborder {
        border-radius: 2%;
        border: 4px solid #371e49;
      }
    </style>
</head>

<nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #371e49;">
    <div class="container-fluid">
      <a class="navbar-brand" href="/"><img src="/images/logo_2.png" width="150" height="60" class="d-inline-block align-top" alt=""></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/menu">Menu</a>
          </li>
          {{#if logged}}
            <li class="nav-item">
                <a class="nav-link" href="/profile">Profile</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
            <!--li class="nav-item">
              <a class="nav-link" href="/cart">Carrito</a>
            </li-->
            <a class="btn btn-info nav-title" href="/cart" role="button">
                <i class="fa fa-shopping-cart" aria-hidden="true"></i> Carrito
                <span class="badge badge-pill badge-secondary">{{session.cart.totalQty}}</span>
            </a>
            {{else}}
              <li class="nav-item">
                <a class="nav-link" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/signup">Signup</a>
              </li>
            {{/if}}
        </ul>
      </div>
    </div>
</nav>

<div class="games">
    {{# each products }}
            {{# each this}}
                <div class="game">
                    <div class="card thumbnail">
                        <img class="card-img-top shop-image  img-fluid" src="{{ this.imagePath }}" alt="Card image cap">
                        <div class="card-block">
                            <h4 class="card-title">{{ this.title }}</h4>
                            <p class="card-text product-description">
                                {{ this.description }}
                            </p>
                            <div class="clearfix">
                                <div class="price pull-left">{{ this.price }}</div>
                                <a href="/cart/add-to-cart/{{this._id}}" class="btn btn-raised btn-success pull-right">
                                    <i class="fa fa-gift" aria-hidden="true"></i> Add to cart
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}
    {{/each}}
</div>
